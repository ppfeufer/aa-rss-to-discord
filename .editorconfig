# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 88

[*.{yaml,yml}]
indent_size = 2

[*.md]
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
